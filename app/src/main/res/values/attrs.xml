<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义功能色属性（提前声明，主题中绑定不会报错） -->
    <attr name="customColorSuccess" format="color" />
    <attr name="customColorWarning" format="color" />
    <attr name="customColorInfo" format="color" />
    
    <!-- 主题属性（用于布局文件中引用主题颜色） -->
    <attr name="colorBackground" format="color" />
    <attr name="colorSurface" format="color" />
    <attr name="colorSurfaceVariant" format="color" />
    <attr name="colorPrimary" format="color" />
    <attr name="colorOnSurface" format="color" />
    <attr name="colorOnSurfaceVariant" format="color" />

    <!--        由于日记标题内容等信息，背景不是主题色而是主题反色-->
    <attr name="colorDiaryText" format="color" />
</resources>

<!--attrs.xml文件里放的是自定义颜色的定义，这些自定义颜色将在themes.xml中被赋值-->