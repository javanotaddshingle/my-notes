<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground">

    <!-- 背景照片区域 -->
    <RelativeLayout
        android:id="@+id/background_container"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="?attr/colorSurface">

        <!-- 背景照片 -->
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_bottom_mask"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/change_background_layout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换背景"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_edit"
                app:tint="?attr/colorOnSurface" />
</LinearLayout>
    </RelativeLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="-40dp"
android:layout_marginBottom="20dp"
android:gravity="center"
android:orientation="vertical">

<!-- 头像 -->
<ImageView
    android:id="@+id/avatar_image"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:background="?attr/colorSurfaceVariant"
    android:padding="2dp"
    android:scaleType="centerCrop" />

<!-- 更换头像：文字式按钮（无色块） -->
<LinearLayout
    android:id="@+id/change_avatar_layout"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更换头像"
        android:textColor="?attr/colorOnSurface"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_edit"
        app:tint="?attr/colorOnSurface" />
</LinearLayout>
</LinearLayout>

    <!-- 用户信息卡片 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"
android:layout_marginBottom="16dp"

    android:background="?attr/colorSurface"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:radius="8dp">

    <!-- 用户名 + 编辑按钮 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="center"
android:orientation="horizontal">

<TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface" />

<!-- 编辑资料：文字式按钮（无色块） -->
<LinearLayout
    android:id="@+id/edit_profile_layout"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:layout_marginStart="16dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textColor="?attr/colorPrimary"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_edit"
        app:tint="?attr/colorPrimary" />
</LinearLayout>
</LinearLayout>

    <!-- 个性签名 -->
<TextView
android:id="@+id/user_signature"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:clickable="true"
android:focusable="true"
android:gravity="center"
android:text="点击编辑个性签名"
    android:textColor="?attr/colorPrimary"
    android:textStyle="italic" />

    <!-- 用户ID -->
<TextView
android:id="@+id/user_id"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:gravity="center"
android:text="ID: 1"
android:textColor="@android:color/darker_gray" />

    <!-- 用户等级 -->
<TextView
android:id="@+id/user_level"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:gravity="center"
android:text="等级: 1" />

    <!-- 经验值 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:gravity="center"
android:orientation="horizontal">

<TextView
    android:id="@+id/user_experience"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="经验值: 0" />

<TextView
    android:id="@+id/experience_to_next_level"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="/ 100" />
</LinearLayout>

    <!-- 经验值进度条 -->
<ProgressBar
android:id="@+id/experience_progress"
style="?android:attr/progressBarStyleHorizontal"
android:layout_width="match_parent"
android:layout_height="8dp"
android:layout_marginTop="16dp"
android:max="100"
android:progress="0"
    android:progressTint="?attr/colorPrimary" />
    </LinearLayout>


<LinearLayout
android:id="@+id/settings_layout"
android:layout_width="match_parent"
android:layout_height="56dp"
android:layout_marginHorizontal="16dp"
android:layout_marginBottom="16dp"

    android:background="?attr/colorSurface"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:radius="8dp">

    <!-- 齿轮图标 -->
<ImageView
android:layout_width="24dp"
android:layout_height="24dp"
android:src="@drawable/ic_settings"
    app:tint="?attr/colorOnSurface" />

<TextView
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:layout_marginStart="16dp"
android:text="设置"
android:textSize="16sp"
    android:textColor="?attr/colorOnSurface" />

    <!-- > 箭头 -->
<ImageView
android:layout_width="20dp"
android:layout_height="20dp"
android:src="@drawable/ic_arrow_right"
    app:tint="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- 功能解锁卡片 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"

    android:background="?attr/colorSurface"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:radius="8dp">

<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
android:text="功能解锁"
android:textSize="18sp"
android:textStyle="bold" />

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
android:orientation="horizontal">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="AI美化"
    android:textSize="16sp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lv.5解锁"
    android:textColor="@android:color/darker_gray"
    android:textSize="14sp" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
android:orientation="horizontal">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="高级主题"
    android:textSize="16sp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lv.10解锁"
    android:textColor="@android:color/darker_gray"
    android:textSize="14sp" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="自定义打卡项"
    android:textSize="16sp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lv.3解锁"
    android:textColor="@android:color/darker_gray"
    android:textSize="14sp" />
</LinearLayout>
    </LinearLayout>

    </LinearLayout>