<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基础夜间主题：统一用 MaterialComponents 体系（和白天版一致，避免闪退） -->
    <style name="Base.Theme.DiaryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 1. 夜间模式专属配色（核心：覆盖白天的浅色，适配深色模式） -->
        <item name="colorBackground">@color/background_dark</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorOnSurfaceVariant">@color/gray_400</item>
        <item name="colorError">@color/color_error</item>

        <!-- 2. 自定义功能色（复用或改夜间值都可） -->
        <item name="customColorSuccess">@color/color_success</item>
        <item name="customColorWarning">@color/color_warning</item>
        <item name="customColorInfo">@color/color_info</item>
        
        <!-- 3. 底部导航栏颜色（夜间模式 - 更亮以提高对比度） -->
        <item name="colorControlNormal">@color/nav_icon_unselected_dark</item>
        <item name="colorControlActivated">@color/nav_icon_selected_dark</item>
        <item name="android:textColorSecondary">@color/nav_icon_unselected_dark</item>

        <!-- 3. 夜间版状态栏配置（核心修正：文字改白色） -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- 夜间模式：状态栏文字设为白色（暗背景下黑色看不清） -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <!-- 最终生效的夜间主题：继承Base，自动获取所有配置 -->
    <style name="Theme.DiaryApp" parent="Base.Theme.DiaryApp">
        <!-- 无需重复写任何配置，全部继承Base即可 -->
    </style>
</resources>